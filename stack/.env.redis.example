# Redis Configuration for Haasib Accounting

# Main Redis Settings
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_PREFIX=haasib_

# Database Numbers
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2

# Accounting Module Redis Databases
REDIS_ACCOUNTING_CACHE_DB=2
REDIS_ACCOUNTING_QUEUE_DB=3
REDIS_ACCOUNTING_SESSION_DB=4
REDIS_ACCOUNTING_REPORTS_DB=5
REDIS_ACCOUNTING_BATCH_DB=6
REDIS_ACCOUNTING_LOCKS_DB=7

# Redis Performance Settings
REDIS_MAX_RETRIES=3
REDIS_BACKOFF_ALGORITHM=decorrelated_jitter
REDIS_BACKOFF_BASE=100
REDIS_BACKOFF_CAP=1000
REDIS_PERSISTENT=false

# Cache Settings
CACHE_STORE=redis
REDIS_CACHE_CONNECTION=cache
REDIS_CACHE_LOCK_CONNECTION=default

# Queue Settings
QUEUE_CONNECTION=redis
REDIS_QUEUE_CONNECTION=default

# Session Settings
SESSION_DRIVER=redis
REDIS_SESSION_CONNECTION=session

# Laravel Horizon Settings (for queue monitoring)
HORIZON_PREFIX=haasib_horizon:

# Cache TTL Settings (in seconds)
ACCOUNTING_CACHE_TTL_COA=86400          # Chart of Accounts: 24 hours
ACCOUNTING_CACHE_TTL_BALANCES=3600      # Account Balances: 1 hour
ACCOUNTING_CACHE_TTL_TRIAL_BALANCE=1800 # Trial Balance: 30 minutes
ACCOUNTING_CACHE_TTL_REPORTS=86400      # Financial Reports: 24 hours
ACCOUNTING_CACHE_TTL_PERMISSIONS=3600   # User Permissions: 1 hour

# Redis Cluster Settings (if using cluster)
REDIS_CLUSTER=redis
REDIS_CLUSTER_HOSTS=127.0.0.1:7000,127.0.0.1:7001,127.0.0.1:7002

# Redis Sentinel Settings (if using sentinel)
REDIS_SENTINEL=mymaster
REDIS_SENTINEL_HOSTS=127.0.0.1:26379,127.0.0.1:26380,127.0.0.1:26381